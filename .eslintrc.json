{
  "extends": "next/core-web-vitals",
  "plugins": [
    "react",
    "react-hooks",
    "prettier"
  ],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "endOfLine": "auto"
      },
      {
        "usePrettierrc": true
      }
    ],
    "indent": ["error", 2],
    "max-len": ["error", { "code": 80 }]
  }
}
